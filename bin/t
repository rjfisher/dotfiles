#   if [[ $? > 0 ]]; then
#     tmux new -s "$@"
#   else
#     tmux attach -t "$@"
#   fi
# else
#   tmux list-sessions 2>/dev/null 1>&2
#   if [[ $? > 0 ]]; then
#     tmux
#   else
#     tmux attach
