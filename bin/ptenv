#!/bin/sh

set -e

start()
{
  mysql.server start

  echo
  echo Starting Zookeeper
  bundle exec rake zookeeper:start

  echo
  echo Starting Redis
  spring rake redis:start

  echo
  echo Starting Passenger Standalone
  sudo passenger start \
    --daemonize \
    --port 80 \
    --environment development \
    --user Larry
}

stop()
{
  mysql.server stop

  echo
  echo Stopping Zookeeper
  bundle exec rake zookeeper:stop

  echo
  echo Stopping Redis
  redis-cli shutdown

  echo
  echo Stopping Passenger Standalone
  sudo passenger stop --port 80
}

if [ "$1" == "restart" ]; then
  stop
  start
elif [ "$1" == "stop" ]; then
  stop
else
  start
fi
